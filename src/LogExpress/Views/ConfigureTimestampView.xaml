<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:LogExpress.Controls"
        x:Class="LogExpress.Views.ConfigureTimestampView"
        Width="900"
        MinWidth="750"
        Height="900"
        WindowStartupLocation="CenterOwner"
        Icon="/Assets/LogExpress Logo 16x16.png"
        >
  <Window.Styles>
    <Style Selector="TextBlock">
       <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style Selector="StackPanel#Timestamp TextBlock">
      <Setter Property="Foreground" Value="Black"/>
    </Style>
    <Style Selector="StackPanel#Severity TextBlock">
      <Setter Property="Foreground" Value="Black"/>
    </Style>
    <Style Selector="Border.info">
      <Setter Property="Background" Value="AliceBlue"/>
      <Setter Property="BorderBrush" Value="Black"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="3"/>
      <Setter Property="Padding" Value="5"/>
      <Setter Property="Margin" Value="0 0 0 20"/>
    </Style>
    <Style Selector="Border.info TextBlock">
      <Setter Property="TextWrapping" Value="Wrap"/>
      <Setter Property="Margin" Value="0 0 0 5"/>
      <Setter Property="Foreground" Value="Black"/>
    </Style>
    <Style Selector="Border.info TextBlock.header">
      <Setter Property="FontWeight" Value="Bold"/>
    </Style>
  </Window.Styles>
  <DockPanel VerticalAlignment="Stretch" Margin="0 10" LastChildFill="True" HorizontalAlignment="Stretch">
    <TextBlock FontSize="18" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" DockPanel.Dock="Top" Width="900" Margin="0 0 0 20" Foreground="{DynamicResource ThemeForegroundBrush}">
      Configure Timestamp Detection
    </TextBlock>

    <Border Classes="info" DockPanel.Dock="Top" Width="850" >
      <StackPanel HorizontalAlignment="Center" Margin="10" Width="800" TextBlock.FontSize="14">
        <TextBlock Text="LogExpert expects the logfiles you open with it to contain entries that has a timestamp, and it even requires the timestamps to be of millisecond resolution."/>
        <TextBlock Text="If you open multiple files as one log 'set' it expects the files to be sequential to each other. This means that the first log-entry's timestamp in a given file should be later than the last entry in the file before it. Each file's start- and end-date, set via the timestamp, ia also used to define the order of the files in regards to which entries to show first and last."/>
        <TextBlock Text="The timestamp for each log-entry must also start at the same column in each log-line, and have the same format."/>
      </StackPanel>
    </Border>
    <StackPanel DockPanel.Dock="Top" Spacing="10" Width="850" HorizontalAlignment="Stretch">
      <Border HorizontalAlignment="Stretch" Background="{DynamicResource ThemeControlHighlightLowBrush}" BorderBrush="{DynamicResource ThemeControlHighlightMidBrush}" BorderThickness="1">
        <StackPanel Name="Timestamp" Orientation="Vertical" HorizontalAlignment="Stretch" Spacing="5" Margin="10">
          <StackPanel Orientation="Vertical" Spacing="5" HorizontalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" FontWeight="Bold" FontSize="14"
                       Text="Start and end position of the log entry timestamps"/>
            <TextBlock HorizontalAlignment="Center"
                       Text="Below is the first line in the first file in the scoped log-set."/>
            <TextBlock HorizontalAlignment="Center"
                       Text="Please select the full date-time to help LogExpress understand where the timestamp can be found:" />
            <controls:MarkerTextBox Text="{Binding TimestampLine}" Width="580" IsReadOnly="True" HorizontalAlignment="Center" FontSize="14" FontFamily="Consolas"
                     SelectionStart="{Binding TimestampLineSelectionStart, Mode=TwoWay}"
                     SelectionEnd="{Binding TimestampLineSelectionEnd, Mode=TwoWay}"
            />
          </StackPanel>
          <Separator Height="20"/>
          <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" FontWeight="Bold" FontSize="14"
                       Text="Timestamp parse format"/>
            <TextBlock HorizontalAlignment="Center"  
                       Text="In most cases the timestamp is automatically understood correctly without additional hints. "/>
            <TextBlock HorizontalAlignment="Center" 
                       Text="If not then you can help the parser by specifying the format here."/>
            <TextBlock HorizontalAlignment="Center" 
                       Text="It expects the format to be according to the .Net DateTime.ParseExact API"/>
            <TextBox Name="TimestampFormat" Text="{Binding TimestampFormat}" Width="200"/>
          </StackPanel>
        </StackPanel>
      </Border>
    </StackPanel>
    <Separator DockPanel.Dock="Top" Height="20"/>
    <Grid DockPanel.Dock="Top" ColumnDefinitions="Auto, Auto"  RowDefinitions="Auto,Auto" HorizontalAlignment="Center" TextBlock.FontWeight="Bold" TextBlock.FontSize="14">
      <!-- Row 0 -->
      <Panel Grid.Column="0" Grid.Row="0" IsVisible="{Binding EntryTimestampsVerified}">
        <DrawingPresenter Width="24" Height="24">
	        <DrawingPresenter.Drawing>
            <DrawingGroup>
              <GeometryDrawing Brush="#00FFFFFF" Geometry="F1M16,16L0,16 0,0 16,0z" /><GeometryDrawing Brush="#FFF6F6F6" Geometry="F1M6.0003,9.1717L2.7073,5.8787 0.000300000000000189,8.5857 0.000300000000000189,8.8277 6.0003,14.8277 16.0003,4.8287 16.0003,4.5857 13.2933,1.8787z" /><GeometryDrawing Brush="#FF388A34" Geometry="F1M14.707,4.707L6,13.414 1.293,8.707 2.707,7.293 6,10.586 13.293,3.293z" />
            </DrawingGroup>
          </DrawingPresenter.Drawing>
	      </DrawingPresenter>
      </Panel>
      <Panel Grid.Column="0" Grid.Row="0" IsVisible="{Binding !EntryTimestampsVerified}">
        <DrawingPresenter Width="24" Height="24">
            <DrawingGroup>
              <GeometryDrawing Brush="#00FFFFFF" Geometry="F1M16,16L0,16 0,0 16,0z" />
              <GeometryDrawing Brush="#FFF6F6F6" Geometry="F1M1.7173,11.6309L5.3483,7.9999 1.7173,4.3689 4.3683,1.7169 8.0003,5.3479 11.6313,1.7169 14.2833,4.3679 10.6523,7.9999 14.2833,11.6309 11.6313,14.2829 8.0003,10.6519 4.3683,14.2829z" /><GeometryDrawing Brush="#FFE41300" Geometry="F1M9.2379,7.9999L12.8689,11.6309 11.6309,12.8689 7.9999,9.2379 4.3689,12.8689 3.1309,11.6309 6.7619,7.9999 3.1309,4.3689 4.3689,3.1309 7.9999,6.7619 11.6309,3.1309 12.8689,4.3689z" />
            </DrawingGroup>
	      </DrawingPresenter>
      </Panel>
      <TextBlock Grid.Column="1" Grid.Row="0" Text="Timestamps have millisecond resolution"/>
      <!-- Row 1 -->
      <Panel Grid.Column="0" Grid.Row="1" IsVisible="{Binding SequentialFilesVerified}">
        <DrawingPresenter Width="24" Height="24">
	        <DrawingPresenter.Drawing>
            <DrawingGroup>
              <GeometryDrawing Brush="#00FFFFFF" Geometry="F1M16,16L0,16 0,0 16,0z" /><GeometryDrawing Brush="#FFF6F6F6" Geometry="F1M6.0003,9.1717L2.7073,5.8787 0.000300000000000189,8.5857 0.000300000000000189,8.8277 6.0003,14.8277 16.0003,4.8287 16.0003,4.5857 13.2933,1.8787z" /><GeometryDrawing Brush="#FF388A34" Geometry="F1M14.707,4.707L6,13.414 1.293,8.707 2.707,7.293 6,10.586 13.293,3.293z" />
            </DrawingGroup>
          </DrawingPresenter.Drawing>
	      </DrawingPresenter>
      </Panel>
      <Panel Grid.Column="0" Grid.Row="1" IsVisible="{Binding !SequentialFilesVerified}">
        <DrawingPresenter Width="24" Height="24">
            <DrawingGroup>
              <GeometryDrawing Brush="#00FFFFFF" Geometry="F1M16,16L0,16 0,0 16,0z" />
              <GeometryDrawing Brush="#FFF6F6F6" Geometry="F1M1.7173,11.6309L5.3483,7.9999 1.7173,4.3689 4.3683,1.7169 8.0003,5.3479 11.6313,1.7169 14.2833,4.3679 10.6523,7.9999 14.2833,11.6309 11.6313,14.2829 8.0003,10.6519 4.3683,14.2829z" /><GeometryDrawing Brush="#FFE41300" Geometry="F1M9.2379,7.9999L12.8689,11.6309 11.6309,12.8689 7.9999,9.2379 4.3689,12.8689 3.1309,11.6309 6.7619,7.9999 3.1309,4.3689 4.3689,3.1309 7.9999,6.7619 11.6309,3.1309 12.8689,4.3689z" />
            </DrawingGroup>
	      </DrawingPresenter>
      </Panel>
      <TextBlock Grid.Column="1" Grid.Row="1" Text="Logfile entries are sequential without overlapping timestamps"/>
    </Grid>
    <Separator DockPanel.Dock="Top" Height="20"/>
    <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center" Margin="0 20 0 0">
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Button Margin="10 5 5 10" Padding="5" Width="200" Command="{Binding SetScopeCommand}">
          <DockPanel LastChildFill="True" >
            <DrawingPresenter Height="16" Width="16" DockPanel.Dock="Left">
