	          </DrawingPresenter>	
            <TextBlock Text="Configure Severity..." Margin="5 0" HorizontalAlignment="Right"/>
          </DockPanel>
        </Button>
      </StackPanel>
    </StackPanel>
    <DockPanel HorizontalAlignment="Center">
      <DockPanel DockPanel.Dock="Left">
        <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" FontWeight="Bold" FontSize="14">Detected file start- and end-dates</TextBlock>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Left" Margin="25 0 0 0"
                    Name="FilesHeader">
          <TextBlock Width="142" FontWeight="Bold" FontSize="10">Filename</TextBlock>
          <TextBlock Width="110" FontWeight="Bold" FontSize="10">Start-date</TextBlock>
          <TextBlock Width="110" FontWeight="Bold" FontSize="10">End-date</TextBlock>
        </StackPanel>
        <ListBox
          Items="{Binding Files}"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          Margin="20 0"
          SelectionMode="Toggle"
          >
          <ListBox.ItemTemplate>
            <DataTemplate>
              <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding RelativeFullName}" Margin="0 0 10 0" Width="130" FontSize="10" ToolTip.Tip="{Binding FullName}"/>
                <TextBlock Text="{Binding StartDate}" Margin="0 0 10 0" Width="100" Height="14" FontSize="10" />
                <TextBlock Text="{Binding EndDate}" Margin="0 0 10 0" Width="100" Height="14" FontSize="10" />
              </StackPanel>
            </DataTemplate>
          </ListBox.ItemTemplate>
        </ListBox>
      </DockPanel>
      <DockPanel>
        <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" FontWeight="Bold" FontSize="14">Detected timestamps (selected file, up to 100 first lines)</TextBlock>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Left" Margin="25 0 0 0" TextBlock.FontSize="10" TextBlock.FontWeight="Bold"
                    Name="LinesHeader">
          <TextBlock Width="212">Timestamp</TextBlock>
          <TextBlock >Content</TextBlock>
        </StackPanel>
        <ListBox
          Items="{Binding Lines}"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          Margin="20 0"
          MinWidth="450"
          >
          <ListBox.ItemTemplate>
            <DataTemplate>
              <StackPanel Orientation="Horizontal" TextBlock.FontSize="10">
                <TextBlock Text="{Binding Timestamp}" Margin="0 0 10 0" Width="200"/>
                <TextBlock Text="{Binding Content}" Width="510"/>
              </StackPanel>
            </DataTemplate>
          </ListBox.ItemTemplate>
        </ListBox>
      </DockPanel>
    </DockPanel>
  </DockPanel>
</Window>
